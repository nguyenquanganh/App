<% if @user.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-danger">
      <%= t "err.err1" %>
      <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
