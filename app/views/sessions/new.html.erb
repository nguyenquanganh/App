<% provide :title, t("sessions.new.title") %>
<h1><%= t "sessions.new.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email, t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("sessions.new.pass") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("sessions.new.title"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "sessions.new.newusr" %>
      <%= link_to t("sessions.new.signup"), signup_path %></p>
  </div>
</div>
